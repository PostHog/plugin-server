{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "types": ["node", "jest"],
        "resolveJsonModule": true,
        "strict": true
    },
    "exclude": ["node_modules", "dist", "bin"]
}
